{
  "name": "express-starter",
  "version": "1.0.0",
  "description": "Starter Kit for Express Api with Typescript, Unit and Integration Testing",
  "main": "main.js",
  "scripts": {
    "build": "swc src -d dist --source-maps --copy-files",
    "build:tsc": "tsc && tsc-alias",
    "start": "npm run build && NODE_ENV=production node dist/main.js",
    "dev": "NODE_ENV=development nodemon",
    "test": "jest --forceExit --detectOpenHandles",
    "test:integration": "jest --testMatch='**/?(*.)+(spec.integration).[jt]s?(x)' --runInBand",
    "lint": "eslint --ignore-path .gitignore --ext .ts src/",
    "lint:fix": "npm run lint -- --fix"
  },
  "author": "Gary Ivy",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.3",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.0.3",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.20",
    "supertest": "^6.2.4",
    "ts-jest": "^29.0.2",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.7.0",
    "tsc-node": "^0.0.3",
    "tsconfig-paths": "^4.1.0",
    "tslib": "^2.4.0",
    "typescript": "^4.8.4"
  }
}
